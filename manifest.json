{
  "name": "full screen",
  "description": "Let one element display full screen",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "./background/index.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "./popup/index.html",
    "default_icon": {
      "16": "./imgs/logo/logo-16.png",
      "32": "./imgs/logo/logo-32.png",
      "48": "./imgs/logo/logo-48.png",
      "128": "./imgs/logo/logo-128.png"
    }
  },
  "icons": {
    "16": "./imgs/logo/logo-16.png",
    "32": "./imgs/logo/logo-32.png",
    "48": "./imgs/logo/logo-48.png",
    "128": "./imgs/logo/logo-128.png"
  },
  "options_page": "./options/index.html"
}
